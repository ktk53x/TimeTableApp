<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.timetableapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label=""
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".activity.Add_Subject" android:windowSoftInputMode="adjustPan"></activity>
        <activity android:name=".EditTimeTableActivity" android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".activity.ShowTimeTable" android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".activity.MainActivity" android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>